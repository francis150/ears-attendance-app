<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InactiveActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/inactive_profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        android:src="@color/lightGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inactive_employee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textSize="24sp"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inactive_profile_image" />

    <TextView
        android:id="@+id/inactive_employee_designation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:textColor="@color/darkGrey"
        android:letterSpacing=".25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inactive_employee_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This employee appears to be inactive."
        android:textSize="14sp"
        android:textColor="@color/red"
        android:fontFamily="@font/semi_bold"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inactive_employee_designation" />

</androidx.constraintlayout.widget.ConstraintLayout>