<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActionsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/actions_profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="100dp"
        android:src="@color/lightGrey"
        android:transitionName="employee_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actions_employee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textSize="24sp"
        android:transitionName="employee_name"
        android:fontFamily="@font/semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_profile_image" />

    <TextView
        android:id="@+id/actions_employee_designation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:fontFamily="@font/medium"
        android:textSize="16sp"
        android:textColor="@color/darkGrey"
        android:letterSpacing=".25"
        android:transitionName="employee_designation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_employee_name" />

    <TextView
        android:id="@+id/actions_employee_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:fontFamily="@font/bold"
        android:textColor="@color/darkGrey"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_employee_designation" />

    <TextView
        android:id="@+id/actions_shift_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/bold"
        android:text="09:00 AM - 11:00 AM"
        android:textAlignment="center"
        android:textColor="@color/darkGrey"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_employee_status" />

    <Button
        android:id="@+id/actions_timein_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Time-in"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_background"
        android:textAllCaps="false"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:textColor="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_shift_time" />

    <Button
        android:id="@+id/actions_timeout_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/bold"
        android:text="Time-out"
        android:textAllCaps="false"
        android:textColor="@color/darkGrey"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_timein_btn" />

    <Button
        android:id="@+id/actions_activitylog_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/bold"
        android:text="Activity Log"
        android:textAllCaps="false"
        android:textColor="@color/darkGrey"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actions_timeout_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>